include ../icons.pug

mixin navbar()
  -
    const items = [
      //{ title: "Train Finder", path: "/go", icon: "uil:directions" },
      //{ title: "Live Map", path: "/map", icon: "uil:map" },

      // this is redundant
      { title: "Home", path: "/", icon: "heroicons-outline:home" },

      { title: "Lines", path: "/lines", icon: "uil:code-branch" },
      { title: "About", path: "/about", icon: "uil:info-circle" }
    ]

  #navbar-housing
    nav#navbar
      #navbar-bg.blend
      #navbar-content.page-centered
        button#navbar-menu-button(title="Menu")
          +icon("uil:bars")
        a(href="/")#navbar-appname-button
          include favicon-svg.pug
          +favicon-svg(1.25)#navbar-favicon
          #navbar-appname-container
            h1#navbar-appname TrainQuery
            p#navbar-appname-beta-tag BETA
        #navbar-desktop-links
          each val in items
            a(href=val.path)
              +icon(val.icon)
              p= val.title
        .flex-grow
        button#navbar-search-full-button
          +icon("uil:search")
          p Search
        button#navbar-search-icon-button(title="Search")
          +icon("uil:search")
        a#navbar-settings-button(href="/settings", title="Settings")
          +icon("uil:setting")
    #navbar-expandables
      #navbar-expandable-menu-container
        #navbar-expandable-menu.page-centered
          each val in items
            a(href=val.path)
              +icon(val.icon)
              p= val.title
      #navbar-expandable-search-container
        #navbar-expandable-search.page-centered
          form#navbar-expandable-search-form(autocomplete="off")
            +icon("uil:search")
            input#navbar-expandable-search-input(
              type="search", name="",
              placeholder="Search for a stop, line, or page...")
          .divider
          #navbar-expandable-search-results
