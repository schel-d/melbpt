extends page-template/page-template.pug

include iconify.pug

block head
  +head-content(
    "Home",
    "/css/index.css",
    "/js/index.js",
    "Navigate Melbourne's train network with TrainQuery.",
    "https://trainquery.com")

block body
  //canvas#hero-bg
  .page-centered

    #hero
      .logo
        include page-template/favicon-svg.pug
        +favicon-svg(2.5).favicon
        h1 TrainQuery
      h2 Navigate Melbourne's train network

    #search
      form#main-search-form(autocomplete="off")
        +iconify("uil:search")
        input#main-search-input(type="search", name="", placeholder="Search for a stop...")
      .divider
      #main-search-results

    #pinned-departures
      .header
        +iconify("majesticons:pin-line")
        h1 Pinned widgets
      #departures
      #pinned-departures-guide.gone
        p
          | Click the pin button next to a widget on a stop's page to show it
          | here.
