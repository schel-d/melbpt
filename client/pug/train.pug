extends page-template/page-template.pug

include icons.pug

block head
  +head-content(
    "Train",
    "train.css",
    "train.js",
    null,
    null)

block body
  .page-centered
    a#back-button(href="javascript:history.back();")
      +icon("uil:angle-left-b")
      p Back
    #loading
      include loading-spinner-svg.pug
      +loading-spinner-svg.loading-spinner()
    #error.gone
      +icon("uil:exclamation-triangle")
      p Something went wrong
    #not-found.gone
      +icon("uil:subway")
      p Train not found
    #train.gone
      h1#train-title
      h2#train-subtitle
      a#line-link
        p#line
      #stopping-pattern
      #continuation
        p#continuation-warning
          | (Anything shown beyond this point is pure guesstimation)
        p#continuation-declaration
        h1#continuation-title
        h2#continuation-subtitle
        a#continuation-line-link
          p#continuation-line
        #continuation-stopping-pattern
