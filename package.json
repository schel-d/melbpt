{
  "name": "melbpt",
  "version": "1.0.0",
  "description": "A guide to Victorian train timetables.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf .out/*",
    "prebuild": "npm run clean",
    "build": "npm run build:ts-server & npm run build:sass & npm run build:ts-client & npm run build:other",
    "build:ts-server": "tsc --project ts-server/tsconfig.json",
    "build:sass": "sass client/scss:.out/public-cachable/css --style compressed",
    "build:ts-client": "node build-bundles.js client/ts/bundles .out/public-cachable/js -m",
    "build:other": "copyfiles -u 2 \"client/other/**/*\" .out/public && copyfiles -u 2 \"client/other-cachable/**/*\" .out/public-cachable",
    "dev": "npm run builddev & npm run watch",
    "dev-offline": "npm run builddev & npm run watch-offline",
    "prebuilddev": "npm run clean",
    "builddev": "npm run build:ts-server & npm run builddev:sass & npm run builddev:ts-client & npm run build:other",
    "builddev:sass": "sass client/scss:.out/public-cachable/css",
    "builddev:ts-client": "node build-bundles.js client/ts/bundles .out/public-cachable/js",
    "watch": "concurrently \"npm run watch:ts-server\" \"npm run watch:sass\" \"npm run watch:ts-client\" \"npm run watch:other\" \"npm run start:watch\"",
    "watch-offline": "concurrently \"npm run watch:ts-server\" \"npm run watch:sass\" \"npm run watch:ts-client\" \"npm run watch:other\" \"npm run start-offline:watch\"",
    "watch:ts-server": "tsc -w --project ts-server/tsconfig.json",
    "watch:sass": "sass -w client/scss:.out/public-cachable/css",
    "watch:other": "onchange \"client/other/**/*\" \"client/other-cachable/**/*\" -- npm run build:other",
    "watch:ts-client": "node build-bundles.js client/ts/bundles .out/public-cachable/js -w",
    "start": "node --es-module-specifier-resolution=node --trace-uncaught index.js",
    "start:watch": "nodemon --watch .out/server --es-module-specifier-resolution=node --trace-uncaught index.js --dev",
    "start-offline": "node --es-module-specifier-resolution=node --trace-uncaught index.js --offline",
    "start-offline:watch": "nodemon --watch .out/server --es-module-specifier-resolution=node --trace-uncaught index.js --offline --dev",
    "lint": "eslint . & tsc --project client/ts/tsconfig.json --noemit & tsc --project ts-server/tsconfig.json --noemit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schel-d/melbpt.git"
  },
  "author": "schel-d",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schel-d/melbpt/issues"
  },
  "homepage": "https://github.com/schel-d/melbpt#readme",
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.9",
    "compression": "^1.7.4",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.1",
    "esbuild": "^0.15.5",
    "express": "^4.18.1",
    "express-rate-limit": "^6.6.0",
    "got": "^12.3.1",
    "luxon": "^3.0.1",
    "melbpt-utils": "^1.7.0",
    "nodemon": "^2.0.19",
    "onchange": "^7.1.0",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.54.5",
    "schel-d-utils": "^2.1.0",
    "schel-d-utils-browser": "^1.0.1",
    "typescript": "^4.7.4",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=16"
  }
}
