{
  "name": "melbpt",
  "version": "1.0.0",
  "description": "A guide to Victorian train timetables.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf .out/*",
    "prebuild": "npm run clean",
    "build": "npm run build:ts-server & npm run build:sass & npm run build:other",
    "build:ts-server": "tsc --project tsconfig-server.json",
    "build:sass": "sass client/scss:.out/public/css --style compressed",
    "build:other": "copyfiles -u 2 \"client/other/**/*\" .out/public",
    "dev": "npm run builddev & npm run watch",
    "prebuilddev": "npm run clean",
    "builddev": "npm run build:ts-server & npm run builddev:sass & npm run build:other",
    "builddev:sass": "sass client/scss:.out/public/css",
    "watch": "concurrently \"npm run watch:ts-server\" \"npm run watch:sass\" \"npm run watch:other\" \"npm run startwatch\"",
    "watch:ts-server": "tsc -w --project tsconfig-server.json",
    "watch:sass": "sass -w client/scss:.out/public/css",
    "watch:other": "onchange \"client/other/**/*\" -- npm run build:other",
    "start": "node --es-module-specifier-resolution=node --trace-uncaught index.js",
    "startwatch": "nodemon --watch .out/server --es-module-specifier-resolution=node --trace-uncaught index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schel-d/melbpt.git"
  },
  "author": "schel-d",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schel-d/melbpt/issues"
  },
  "homepage": "https://github.com/schel-d/melbpt#readme",
  "dependencies": {
    "browserify": "^17.0.0",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "luxon": "^3.0.1",
    "nodemon": "^2.0.19",
    "onchange": "^7.1.0",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "tsify": "^5.0.4",
    "typescript": "^4.7.4",
    "uglify-js": "^3.16.3",
    "uglifyify": "^5.0.2",
    "watchify": "^4.0.0",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1"
  }
}
